<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="SchulungLevel4Gittest">
		<provider>
			org.hibernate.jpa.HibernatePersistenceProvider
		</provider>
		<class>
			de.cobinet.schulunglevel4gittest.entities.OrderdetailId
		</class>
		<class>de.cobinet.schulunglevel4gittest.entities.Order</class>
		<class>
			de.cobinet.schulunglevel4gittest.entities.Orderdetail
		</class>
		<class>
			de.cobinet.schulunglevel4gittest.entities.Territory
		</class>
		<class>
			de.cobinet.schulunglevel4gittest.entities.Category
		</class>
		<class>
			de.cobinet.schulunglevel4gittest.entities.Employee
		</class>
		<class>de.cobinet.schulunglevel4gittest.entities.Shipper</class>
		<class>
			de.cobinet.schulunglevel4gittest.entities.Customer
		</class>
		<class>
			de.cobinet.schulunglevel4gittest.entities.Customerdemographic
		</class>
		<class>de.cobinet.schulunglevel4gittest.entities.Region</class>
		<class>
			de.cobinet.schulunglevel4gittest.entities.Supplier
		</class>
		<class>de.cobinet.schulunglevel4gittest.entities.Product</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="none" />
			<property name="javax.persistence.sharedCache.mode"
				value="DISABLE_SELECTIVE" />
			<property name="hibernate.c3p0.max_size" value="100" />
			<property name="hibernate.c3p0.idle_test_period"
				value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.cache.use_query_cache"
				value="true" />
			<property name="hibernate.c3p0.min_size" value="1" />
			<property name="hibernate.default_schema" value="PUBLIC" />
			<property name="hibernate.archive.autodetection" value="" />
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.c3p0.timeout" value="3000" />
			<property name="hibernate.transaction.auto_close_session"
				value="false" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:h2:tcp://localhost:5435/northwind;IFEXISTS=TRUE" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.cache.region.factory_class"
				value="org.hibernate.cache.jcache.JCacheRegionFactory" />
			<property name="javax.persistence.jdbc.driver"
				value="org.h2.Driver" />
			<property name="javax.persistence.jdbc.password" value="" />
		</properties>
	</persistence-unit>
</persistence>
